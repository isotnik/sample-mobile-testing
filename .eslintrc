{
  "plugins": [
    "wdio",
    "@typescript-eslint"
  ],
  "extends": [
    "plugin:wdio/recommended",
    "eslint:recommended",
    "plugin:@typescript-eslint/recommended"
  ],
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "env": {
    "es6": true,
    "mocha": true,
    "node": true
  },
  "globals": {
    "$": true,
    "$$": true,
    "driver": true,
    "config": true,
    "__ENV": true
  },
  "rules": {
    "no-unused-vars": "warn"
  }
}